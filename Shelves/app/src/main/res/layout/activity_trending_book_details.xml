<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.anonymous.shelves.TrendingBookDetailsActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/book_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:id="@+id/book_detail_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                style="@style/TextAppearance.AppCompat.Headline"
                tools:text="The Escape Artist"
                android:gravity="start|center_vertical"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/book_detail_cover_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>

        <TextView
            android:id="@+id/book_detail_book_title"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            tools:text="The Escape Artist"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/book_detail_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            tools:text="by Simon Ross"
            android:fontFamily="sans-serif-smallcaps" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/book_detail_book_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:theme="@style/MyRatingBar"
                android:layout_margin="4dp"
                android:numStars="5"
                android:stepSize="0.1"
                tools:rating="1" />

            <TextView
                android:id="@+id/book_detail_book_rating_text"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5.0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/book_detail_add_to_shelf"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="Add to shelf"
                android:background="@color/colorPrimary"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:background="@android:color/white"/>-->

        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginLeft="6dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:text="Description:"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/book_detail_book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text=""
            android:textColor="@android:color/white"
            android:lineSpacingExtra="4dp"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="4dp"
            android:ellipsize="end"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

</ScrollView>

